yum install nfs-utils
yum install rpcbind
systemctl enable nfs-server
systemctl enable rpcbind
 
## 启动nfs 和rpcbind
systemctl start nfs
systemctl start rpcbind
systemctl status rpcbind （查看服务状态）


mkdir /home/date/pp
chown nfsnobody.nfsnobody /home/date/pp


vim /etc/exports
/home/date/pp *(rw,sync,all_squash)
exportfs -rv




